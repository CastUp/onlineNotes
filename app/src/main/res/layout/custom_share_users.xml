<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customUser"
    android:background="@drawable/dialog_add_tag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/UserShareImage"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="#FF9800"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nameUserShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAZEM IBRAHIM"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/colorWhite"
        android:includeFontPadding="false"
        android:textSize="@dimen/_12ssp"
        android:singleLine="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@id/UserShareImage"
        app:layout_constraintTop_toTopOf="@id/UserShareImage"
        app:layout_constraintStart_toEndOf="@id/UserShareImage"/>

    <TextView
        android:id="@+id/ShareNoteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_note"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/colorWhite"
        android:includeFontPadding="false"
        android:textSize="@dimen/_10ssp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:background="@drawable/button_selector_share"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/UserShareImage"
        app:layout_constraintTop_toTopOf="@id/UserShareImage"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>